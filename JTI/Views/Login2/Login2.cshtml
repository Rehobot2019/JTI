@model JTI.Models.ModeloLogin

@{
    ViewData["Title"] = "Login2";
}

<br/>
<h4>Ingrese sus datos para iniciar sesión</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NombreUsuario" class="control-label"></label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span> 
                        </span>
                        <input asp-for="NombreUsuario" class="form-control" />
                    </div>
                    <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <div class="col-md-10">
                    <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </span>
                        <input asp-for="Password" class="form-control" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Recordarme" /> @Html.DisplayNameFor(model => model.Recordarme)
                    </label>
                </div>
            </div>   
            <div class="form-group">
                <input type="submit" value="Inicio" class="btn btn-success" />
            </div>    
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
